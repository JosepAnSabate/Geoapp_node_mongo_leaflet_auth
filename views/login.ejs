<%- include('layouts/header');-%>

  <body>
    <%- include('layouts/navbar'); -%>
    <!-- Page Header -->
    <br>
    <br>
    <header class="masthead">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Inicia sessió</h1>            
            </div>
          </div>
        </div>
      </div>
    </header>
  <br>
    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-10 mx-auto"> 

          <% if(errors) {%> 
            <ul class="list-group">
                <li class="list-group-item list-group-item-danger">
                <%= errors %> 
                </li>
            </ul>
          <% } %>

          <form action="/users/login" method="POST" enctype="multipart/form-data">
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label class="label-forms">Nom d'Usuari</label>
                <input type="text" class="form-control" placeholder="Nom d'usuari" id="username" name="username">              
              </div>
            </div>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label class="label-forms">Contrasenya</label>
                <input type="password" class="form-control" placeholder="Contrasenya" id="password" name="password" autocomplete="on">              
              </div>
            </div>                   
            <br>  
            <div class="d-flex justify-content-center control-group">       
            <button type="submit" class="btn btn-primary" style="max-height: 44px; white-space: nowrap; margin-left: 5px;" >Inicia Sessió</button>
            <a href="/auth/register"><button type="button" class="btn btn-link">O Registra't amb un Nou Compte</button></a>
            </div> 
          </form>
        </div>
      </div>
    </div>
  
    <%- include('layouts/footer'); -%>

    <%- include('layouts/scripts');-%> 
  </body>
  
  </html>
  
